void setup() {
    Serial.begin(115200);
    mySerial.begin(115200, SERIAL_8N1, RX_PIN, TX_PIN);

    // C·∫•u h√¨nh camera
    camera_config_t config;
    config.ledc_channel = LEDC_CHANNEL_0;
